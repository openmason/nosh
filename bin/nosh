#!/usr/bin/env node

/**
 * nosh - copyright(c) 2012 openmason.
 *
 * MIT Licensed
 */

var optimist = require('optimist');
var nosh     = require('..');
var sys      = require('sys');
var asciimo  = require('asciimo').Figlet;
var colors   = require('colors');

var config = {
    "url": "http://localhost:8080"
};

// nosh <url>
var argv = optimist.argv;

if(argv._.length==0) {
  console.log('using '+config.url);
} else {
  config.url = argv._[0];
}

// fonts that are good
// doom / starwars / serifcap / rounded / rectangles / puffy / pepper / pebbles / avatar

// present the title art
asciimo.write('nosh', 'doom', function(art) {
  sys.puts(art.green);
  var shell = new nosh(config);
});

